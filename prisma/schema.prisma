generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Project {
  id           String        @id @default(uuid())
  name         String
  description  String
  notes        String
  todos        Todo[]
  githubUrl    String? // nullable
  status       ProjectStatus
  archiveNotes String? // nullable - notes about why the project was archived
}

model Todo {
  id        String  @id @default(uuid())
  text      String
  completed Boolean
  project   Project @relation(fields: [projectId], references: [id])
  projectId String
}

enum ProjectStatus {
  draft
  refined
  archived
}
